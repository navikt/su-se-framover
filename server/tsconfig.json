{
    "compilerOptions": {
        "lib": ["ESNext"],
        "outDir": "./dist",
        "typeRoots": ["./node_modules/@type", "./typings"],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ESNext",
        "composite": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true
    }
}
